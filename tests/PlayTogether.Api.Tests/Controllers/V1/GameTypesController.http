@hostname = localhost
@port = 5001
@azurehost = play-together.azurewebsites.net
@lchost = {{hostname}}:{{port}}
@host = {{lchost}}
@baseUrl = https://{{host}}
@contentType = application/json
@token = {{login.response.body.$.message}}
@authToken = bearer {{token}}

###
# @name login
POST {{baseUrl}}/api/play-together/v1/account/login
content-type: {{contentType}}

{
  "email": "admin01@example.com",
  "password": "Pa55w0rd!"
}


###
# Get all game type
GET {{baseUrl}}/api/play-together/v1/game-types
content-type: {{contentType}}
Authorization: {{authToken}}


###
# Get all game type with search
GET {{baseUrl}}/api/play-together/v1/game-types
  ?SearchString=hành động
content-type: {{contentType}}
Authorization: {{authToken}}


###
# Create a new game type
POST {{baseUrl}}/api/play-together/v1/game-types
content-type: {{contentType}}
Authorization: {{authToken}}

{
  "name": "string",
  "shortName": "string",
  "otherName": "string",
  "description": "string"
}

###
# Get by Id
GET {{baseUrl}}/api/play-together/v1/game-types/ef540c0f-09f1-46dd-9933-c1931ecee061
content-type: {{contentType}}
Authorization: {{authToken}}

###
# Update game type
