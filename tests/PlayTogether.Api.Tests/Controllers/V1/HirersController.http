###
# Get all players with paging, filter, search
GET {{baseUrl}}/api/play-together/v1.1/players
    ?Name=
    &Gender=
    &IsRecent=
    &GameId=
    &MusicId=
    &PlayerStatus=
    &IsOrderByFirstName=
    &IsOrderByRating=
    &IsOrderByPricing=
    &IsRecent=true
    &PageNumber=1
    &PageSize=10
content-type: {{contentType}}
Authorization: {{authToken}}


